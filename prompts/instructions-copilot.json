{
  "coding_style": {
    "indentation": "spaces",
    "spaces_per_indent": 4,
    "naming_convention": {
      "variables": "camelCase",
      "methods": "PascalCase",
      "constants": "ALL_CAPS"
    },
    "brace_style": "K&R",
    "use_comments": "xml-doc"
  },
  "preferred_libraries": [
    "FluentEmail.Core",
    "FluentEmail.Smtp",
    "Microsoft.Extensions.Logging",
    "Moq",
    "xUnit"
  ],
  "project_structure": {
    "use_regions": true,
    "file_naming": "MatchClassName",
    "folder_structure": "by-feature"
  },
  "best_practices": {
    "use_dependency_injection": true,
    "follow_solid_principles": true,
    "prefer_async_methods": true,
    "logging_framework": "Serilog"
  },
  "disallowed_functions": [
    "Console.WriteLine",
    "Thread.Sleep",
    "System.Web.Mail"
  ],
  "notes": "Ensure proper error handling in email transactions, prioritize test-driven development (TDD), and maintain high code readability."
}